head
  meta charset="utf-8"
  / Uncomment to make IE8 render like IE7
  / meta http-equiv="X-UA-Compatible" content="IE=7"
  / Set the viewport width to device width for mobile
  meta name="viewport" content="width=device-width, initial-scale=1.0"

  meta property="fb:app_id"          content="#{ENV['FACEBOOK_KEY']}"
  meta property="og:title"           content="Imagine"
  meta property="og:image"           content="http://i.imgur.com/5yyKkfl.png"

  title= content_for?(:title) ? yield(:title) : "Imagine"
  = favicon_link_tag "favicon.png", :type => "image/png"
  = stylesheet_link_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tag

body class="#{controller.controller_name} #{controller.action_name}"
  header
    .mr_header
      .row
        .mr_logo= link_to "Meu Rio", "http://meurio.org.br/"
        .login
          - if current_user
            | #{current_user.name} 
            = image_tag current_user.image
          - else
            | Entre com a sua conta do 
            = link_to image_tag("facebook.png"), "/auth/facebook", :id => "auth-facebook"
    .imagine_header
      .row
        .imagine_logo= link_to "Imagine", ""
        .menu
          .fb-like data-href="http://imagine.com.br" data-send="false" data-layout="box_count" data-width="450" data-show-faces="false"
  = yield
  
  footer
    .row
      .signature Â© 2013 Imagine

  = javascript_include_tag "application"
  #fb-root
  javascript:
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=305892829539951";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
